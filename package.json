{
  "name": "ai-music-player",
  "version": "1.1.3",
  "description": "AI Music Player - Electron uygulamasÄ±",
  "main": "main.js",
  "author": "AI Music",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "node build-app.js",
    "setup:sw": "node scripts/setup-service-worker.js",
    "postinstall": "node scripts/setup-service-worker.js && node build-app.js",
    "copy:vp": "node scripts/copy-vp-from-setup.js",
    "auth:github": "node scripts/git-auth-github.js",
    "setup:vp-auth": "node scripts/setup-npmrc-github.js",
    "dist": "electron-builder --win --ia32 --x64",
    "dist:64": "electron-builder --win --x64",
    "dist:32": "electron-builder --win --ia32"
  },
  "keywords": [
    "music",
    "player",
    "electron"
  ],
  "devDependencies": {
    "esbuild": "^0.24.0",
    "electron": "22.3.27",
    "electron-builder": "^24.13.3",
    "@supabase/supabase-js": "^2.57.4",
    "@ai-music-corp/virtual-player": "102.18.3"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "build": {
    "appId": "com.aimusic.player",
    "productName": "AI Music Player",
    "publish": [
      {
        "provider": "generic",
        "url": "https://api.aimusic.com.tr/updates"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "package.json",
      "index.html",
      "login.html",
      "login.js",
      "app.js",
      "sw-register.js",
      "styles.css",
      "login.css",
      "assets/**",
      "file-cache-manager-sw.js",
      "!**/node_modules/**",
      "!dist",
      "!.git*",
      "!*.md",
      "!vp-bundle.js",
      "!vp-bundle.js.map",
      "!sw.js",
      "!reference-setup/**",
      "!scripts/**",
      "!src/**",
      "!build-app.js",
      "!build-vp.js",
      "!.tmp-vp.js",
      "!file-cache-manager-sw.js.map"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/ai-music-logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerLanguages": [
        "tr"
      ],
      "language": "2055",
      "shortcutName": "AI Music Player",
      "uninstallDisplayName": "AI Music Player"
    }
  }
}